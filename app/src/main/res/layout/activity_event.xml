<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/toolbar1"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar1"
            android:layout_centerHorizontal="true">

            <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/nested"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iImg"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:scaleType="center"
                        app:srcCompat="@drawable/no_image" />


                    <LinearLayout
                        android:id="@+id/lLinearlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageView8"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="5dp">


                        <TextView
                            android:id="@+id/tStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Lima 25/09/2018 10:50 pm" />

                        <TextView
                            android:id="@+id/tTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:padding="3dp"
                            android:text="Reunion de integracion - Equipo de trabajo Santander"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/lLinearlayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lLinearlayout1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lInterested"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/iInterested"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    android:src="@drawable/start_attend"
                                    app:srcCompat="@drawable/start_attend" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="Me interesa"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lAttend"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.50"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/iAttend"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center_horizontal"
                                    android:padding="5dp"
                                    android:src="@drawable/check_attend"
                                    app:srcCompat="@drawable/check_attend" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_horizontal"
                                    android:text="Asistiré"
                                    android:textColor="@color/black"
                                    android:textSize="9sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lLinearlayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.40"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:id="@+id/linearmap"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="vertical">

                                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/toolbar">

                                        <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                            android:id="@+id/map"
                                            android:name="com.example.ghostl.proyectocibertec.utils.ScrollGoogleMap"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="top"
                                            android:gravity="top" />-->


                                    </FrameLayout>
                                </LinearLayout>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="0.60"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_below="@+id/tDescription"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_toEndOf="@+id/cCardImage"
                                            android:layout_toRightOf="@+id/cCardImage"
                                            android:orientation="vertical">


                                            <ImageView
                                                android:id="@+id/imageView6"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                app:srcCompat="@mipmap/ic_launcher_round" />

                                            <LinearLayout
                                                android:id="@+id/linearLayout3"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="3dp"
                                                android:layout_marginStart="3dp"
                                                android:layout_toEndOf="@+id/imageView6"
                                                android:layout_toRightOf="@+id/imageView6"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tLocation"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:text="Av. Javier Prado - San Isidro"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="12sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tDate"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:text="12:00 pm"
                                                    android:textSize="12sp" />
                                            </LinearLayout>
                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/relativeLayout2"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentEnd="true"
                                            android:layout_alignParentRight="true"
                                            android:layout_below="@+id/tDescription"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="8dp"
                                            android:layout_toEndOf="@+id/cCardImage"
                                            android:layout_toRightOf="@+id/cCardImage"
                                            android:orientation="vertical">


                                            <ImageView
                                                android:id="@+id/imageView62"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_alignParentLeft="true"
                                                android:layout_alignParentStart="true"
                                                android:layout_centerVertical="true"
                                                app:srcCompat="@mipmap/ic_launcher_round" />

                                            <LinearLayout
                                                android:id="@+id/linearLayout32"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="3dp"
                                                android:layout_marginStart="3dp"
                                                android:layout_toEndOf="@+id/imageView62"
                                                android:layout_toRightOf="@+id/imageView62"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tLocation2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:text="Av. Javier Prado - San Isidro"
                                                    android:textColor="@android:color/black"
                                                    android:textSize="12sp"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tDate2"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:ellipsize="end"
                                                    android:text="12:00 pm"
                                                    android:textSize="12sp" />
                                            </LinearLayout>
                                        </RelativeLayout>

                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/lLinearlayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/white"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:id="@+id/rAttend"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:background="@drawable/green_dialog_background"
                                android:orientation="vertical">

                                <ImageView

                                    android:id="@+id/imageView10"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/red_check"
                                    app:srcCompat="@drawable/red_check" />

                                <Button
                                    android:id="@+id/bAttend"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toEndOf="@+id/imageView10"
                                    android:layout_toRightOf="@+id/imageView10"
                                    android:background="@android:color/transparent"
                                    android:text="35 Asistirán"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rInterest"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:background="@drawable/green_dialog_background"
                                android:orientation="vertical">

                                <ImageView

                                    android:id="@+id/imageView9"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/red_start"
                                    app:srcCompat="@drawable/red_start" />

                                <Button
                                    android:id="@+id/bInterest"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentTop="true"
                                    android:layout_toEndOf="@+id/imageView9"
                                    android:layout_toRightOf="@+id/imageView9"
                                    android:background="@android:color/transparent"
                                    android:text="10 Interesados"
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="12sp" />


                            </RelativeLayout>


                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>